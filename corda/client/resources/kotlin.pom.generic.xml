<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <properties>
    <baseDir>/temp</baseDir>
		<groupId>groupId</groupId>
  	<artifactId>artifactId</artifactId>
  	<version>version</version>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>
    <kotlin.version>1.2.71</kotlin.version>
		<kotlin.compiler.languageVersion>1.2</kotlin.compiler.languageVersion>
		<kotlin.compiler.apiVersion>1.2</kotlin.compiler.apiVersion>
		<kotlin.compiler.jvmTarget>1.8</kotlin.compiler.jvmTarget>
</properties>
  <groupId>${groupId}</groupId>
  <artifactId>${artifactId}-webserver</artifactId>
  <version>${version}</version>
  <dependencies>
		<dependency>
        <groupId>org.jetbrains.kotlin</groupId>
        <artifactId>kotlin-stdlib-jdk8</artifactId>
        <version>${kotlin.version}</version>
    </dependency>
  	<dependency>
  		<groupId>net.corda</groupId>
  		<artifactId>corda-core</artifactId>
  		<version>4.1</version>
  	</dependency>
  	<dependency>
  		<groupId>net.corda</groupId>
  		<artifactId>corda-jackson</artifactId>
  		<version>4.1</version>
  	</dependency>
  	<dependency>
  		<groupId>com.tibco.dovetail</groupId>
  		<artifactId>dovetail-corda</artifactId>
  		<version>0.2.1-SNAPSHOT</version>
  	</dependency>
    <dependency>
  		<groupId>net.corda</groupId>
  		<artifactId>corda-rpc</artifactId>
  		<version>4.1</version>
  	</dependency>
    <dependency>
  		<groupId>net.corda</groupId>
  		<artifactId>corda-finance-contracts</artifactId>
  		<version>4.1</version>
  	</dependency>
    <dependency>
  		<groupId>net.corda</groupId>
  		<artifactId>corda-finance-workflows</artifactId>
  		<version>4.1</version>
  	</dependency>
    <dependency>
  		<groupId>io.springfox</groupId>
  		<artifactId>springfox-swagger2</artifactId>
  		<version>2.9.2</version>
  	</dependency>
    <dependency>
  		<groupId>io.springfox</groupId>
  		<artifactId>springfox-swagger-ui</artifactId>
  		<version>2.9.2</version>
  	</dependency>
    <dependency>
  		<groupId>org.springframework.security</groupId>
  		<artifactId>spring-security-core</artifactId>
  		<version>5.1.6.RELEASE</version>
  	</dependency>
    <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-web</artifactId>
        <version>2.1.7.RELEASE</version>
    </dependency>
    <dependency>
	    <groupId>com.github.jsqlparser</groupId>
	    <artifactId>jsqlparser</artifactId>
	    <version>2.1</version>
	</dependency>
   <dependency>
    <groupId>commons-lang</groupId>
    <artifactId>commons-lang</artifactId>
    <version>2.6</version>
</dependency>
  </dependencies>
  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
     <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>spring</id>
      <name>spring plugin Repository</name>
      <url> http://repo.spring.io/plugins-release/</url>
    </repository>
  </repositories>
  <build>
  	<directory>${baseDir}</directory>
    <sourceDirectory>${baseDir}/src/main/kotlin</sourceDirectory>
    <outputDirectory>${baseDir}/target/kotlin/classes</outputDirectory>
    <resources>
      <resource>
        <directory>${baseDir}/src/main/resources</directory>
      </resource>
    </resources>
    <finalName>kotlin-${project.artifactId}-${project.version}</finalName>
    <plugins>
    <plugin>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-maven-plugin</artifactId>
      <executions>
        <execution>
            <goals>
                <goal>repackage</goal>
            </goals>
            <configuration>
                <classifier>spring-boot</classifier>
                <mainClass>
                  ${groupId}.client.webserver.ServerKt
                </mainClass>
            </configuration>
        </execution>
      </executions>
    </plugin>
		<plugin>
            <artifactId>kotlin-maven-plugin</artifactId>
            <groupId>org.jetbrains.kotlin</groupId>
            <version>${kotlin.version}</version>
            <executions>
                <execution>
                    <id>compile</id>
                    <goals> <goal>compile</goal> </goals>
                </execution>
            </executions>
						<configuration>
        			<nowarn>true</nowarn>  <!-- Disable warnings -->
        			<args>
            		<arg>-java-parameters</arg> <!-- Enable strict mode for JSR-305 annotations -->
        			</args>
							</configuration>
        </plugin>
</plugins>
 </build>
</project>